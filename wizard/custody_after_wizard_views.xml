<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- After Photos Wizard Form View -->
    <record id="custody_after_wizard_view_form" model="ir.ui.view">
        <field name="name">custody.after.wizard.form</field>
        <field name="model">custody.after.wizard</field>
        <field name="arch" type="xml">
            <form string="📸 Take After Photos &amp; Return">
                <header>
                    <button string="📦 Save &amp; Return Equipment"
                            type="object"
                            name="action_save_and_return"
                            class="oe_highlight"
                            confirm="Save photos and process equipment return?"/>
                    <button string="💾 Save Photos Only"
                            type="object"
                            name="action_save_photos_only"
                            class="btn-secondary"/>
                    <button string="👁️ View Before Photos"
                            type="object"
                            name="action_view_before_photos"
                            class="btn-info"
                            invisible="before_image_count == 0"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </header>

                <sheet>
                    <!-- Alert Header -->
                    <div class="alert alert-warning">
                        <h4>📸 After Return Documentation</h4>
                        <p><strong>Property:</strong> <field name="property_name" readonly="1" nolabel="1"/>
                           <strong>Employee:</strong> <field name="employee_name" readonly="1" nolabel="1"/></p>
                        <p><strong>Before Photos:</strong> <field name="before_image_count" readonly="1" nolabel="1"/> available for comparison</p>
                    </div>

                    <!-- Instructions -->
                    <group>
                        <field name="instructions" widget="html" nolabel="1"/>
                    </group>

                    <!-- Assessment Section -->
                    <group string="📋 Equipment Condition Assessment">
                        <group>
                            <field name="condition_assessment" widget="radio" required="1"/>
                            <field name="damage_found"/>
                        </group>
                        <group>
                            <field name="location_notes" placeholder="e.g., IT Office, Reception"/>
                            <field name="existing_after_count" readonly="1"/>
                            <field name="total_images"/>
                        </group>
                    </group>

                    <!-- Condition Notes - Required -->
                    <group string="📝 Return Condition Notes" col="1">
                        <field name="return_notes" nolabel="1" required="1"
                               placeholder="Describe the current condition of the equipment upon return..."/>
                    </group>

                    <!-- Damage Description - Conditional -->
                    <group string="⚠️ Damage Description" invisible="not damage_found" col="1">
                        <field name="damage_description" nolabel="1"
                               placeholder="Provide detailed description of any damage found..."/>
                    </group>

                    <!-- Image Upload Section -->
                    <notebook>
                        <page string="📸 Upload Return Photos" name="upload_photos">
                            <div class="row">
                                <div class="col-12">
                                    <button string="➕ Add More Photo Slots"
                                            type="object"
                                            name="action_add_image_slot"
                                            class="btn btn-secondary btn-sm float-right mb-3"/>
                                </div>
                            </div>

                            <field name="image_line_ids" nolabel="1">
                                <tree editable="bottom" create="true" delete="true">
                                    <field name="image" widget="image" width="150px"/>
                                    <field name="description" placeholder="Brief description"/>
                                    <field name="is_damage_photo"/>
                                    <field name="notes" placeholder="Detailed notes"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="sequence"/>
                                            <field name="description" placeholder="e.g., Overall condition, Damage area"/>
                                            <field name="is_damage_photo"/>
                                        </group>
                                        <group>
                                            <field name="image" widget="image"/>
                                        </group>
                                    </group>
                                    <group string="Notes">
                                        <field name="notes" placeholder="Detailed notes about this photo..."/>
                                    </group>
                                </form>
                            </field>
                        </page>

                        <page string="📊 Assessment Summary" name="summary">
                            <group>
                                <group string="Overall Assessment">
                                    <field name="condition_assessment" readonly="1"/>
                                    <field name="damage_found" readonly="1"/>
                                    <field name="auto_return"/>
                                </group>
                            </group>
                            <group string="Summary Notes" col="1">
                                <field name="return_notes" readonly="1" nolabel="1"/>
                                <field name="damage_description" readonly="1" nolabel="1"
                                       invisible="not damage_found"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- After Photos Wizard Action -->
    <record id="custody_after_wizard_action" model="ir.actions.act_window">
        <field name="name">📸 Take After Photos &amp; Return</field>
        <field name="res_model">custody.after.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="custody_after_wizard_view_form"/>
    </record>
</odoo>
