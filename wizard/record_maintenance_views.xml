<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Record Maintenance Wizard Form View -->
    <record id="view_custody_record_maintenance_wizard_form" model="ir.ui.view">
        <field name="name">custody.record.maintenance.wizard.form</field>
        <field name="model">custody.record.maintenance.wizard</field>
        <field name="arch" type="xml">
            <form string="üîß Record Maintenance">
                <sheet>
                    <div class="oe_title" invisible="context.get('default_property_id')">
                        <h1>
                            <field name="property_id" placeholder="Select Property"/>
                        </h1>
                    </div>
                    
                    <!-- Quick Info Card -->
                    <div class="alert alert-info">
                        <strong>üìù Recording maintenance for:</strong> 
                        <span invisible="not context.get('default_property_id')">Selected Property</span>
                        <field name="property_id" readonly="1" invisible="not context.get('default_property_id')" style="font-weight: bold;"/>
                    </div>
                    
                    <group>
                        <group string="üîß Maintenance Details">
                            <field name="maintenance_date" help="When was this maintenance performed?"/>
                            <field name="maintenance_type" widget="radio" help="What type of maintenance was this?"/>
                            <field name="cost" help="Total cost of maintenance (optional)"/>
                        </group>
                        <group string="üë• Who Did It?">
                            <field name="performed_by" help="Internal employee who performed maintenance"/>
                            <field name="vendor_id" help="External vendor/company (if outsourced)"/>
                            <separator/>
                            <field name="next_maintenance_date" help="When should the next maintenance be scheduled?"/>
                        </group>
                    </group>
                    
                    <!-- Status Settings -->
                    <group string="‚öôÔ∏è Property Status After Maintenance">
                        <field name="update_status" help="Should we update the property status?"/>
                        <field name="preserve_in_use_status" invisible="not update_status" 
                               help="Keep 'In Use' status if property is currently being used"/>
                    </group>
                    <notebook>
                        <page string="üìù Notes" name="notes">
                            <div class="alert alert-secondary">
                                <strong>üí° Tip:</strong> Document what was done, parts replaced, issues found, etc.
                            </div>
                            <field name="notes" placeholder="Example: Replaced air filter, cleaned components, checked for wear and tear, all systems functioning normally..."/>
                        </page>
                        <page string="üì∑ Images" name="images">
                            <div class="alert alert-secondary">
                                <strong>üì∏ Upload photos:</strong> Before/after maintenance, replaced parts, any issues found
                            </div>
                            <field name="image_ids" context="{'default_name': 'Maintenance Image'}" 
                                   string="Upload Maintenance Images"/>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_record_maintenance" string="‚úÖ Save Maintenance Record" type="object" class="btn-primary btn-lg"/>
                    <button string="‚ùå Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Record Maintenance Action -->
    <record id="action_custody_record_maintenance" model="ir.actions.act_window">
        <field name="name">Record Maintenance</field>
        <field name="res_model">custody.record.maintenance.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_custody_property"/>
        <field name="binding_view_types">form</field>
    </record>
</odoo> 