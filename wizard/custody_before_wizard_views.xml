<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Before Photos Wizard Form View -->
    <record id="custody_before_wizard_view_form" model="ir.ui.view">
        <field name="name">custody.before.wizard.form</field>
        <field name="model">custody.before.wizard</field>
        <field name="arch" type="xml">
            <form string="📸 Take Before Photos">
                <header>
                    <button string="📸 Save &amp; Approve"
                            type="object"
                            name="action_save_and_approve"
                            class="oe_highlight"
                            confirm="Save photos and approve custody request?"/>
                    <button string="💾 Save Photos Only"
                            type="object"
                            name="action_save_photos_only"
                            class="btn-secondary"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </header>

                <sheet>
                    <!-- Alert Header -->
                    <div class="alert alert-info">
                        <h4>📸 Before Handover Documentation</h4>
                        <p><strong>Property:</strong> <field name="property_name" readonly="1" nolabel="1"/>
                           <strong>Employee:</strong> <field name="employee_name" readonly="1" nolabel="1"/></p>
                    </div>

                    <!-- Instructions -->
                    <group>
                        <field name="instructions" widget="html" nolabel="1"/>
                    </group>

                    <!-- Current Status -->
                    <group>
                        <group string="Current Status">
                            <field name="custody_id" invisible="1"/>
                            <field name="current_state" readonly="1"/>
                            <field name="existing_before_count" readonly="1"/>
                            <field name="total_images"/>
                        </group>
                        <group string="Location &amp; Notes">
                            <field name="location_notes" placeholder="e.g., IT Office, Meeting Room"/>
                            <field name="auto_approve"/>
                        </group>
                    </group>

                    <!-- Image Upload Section -->
                    <notebook>
                        <page string="📸 Upload Photos" name="upload_photos">
                            <div class="row">
                                <div class="col-12">
                                    <button string="➕ Add More Photo Slots"
                                            type="object"
                                            name="action_add_image_slot"
                                            class="btn btn-secondary btn-sm float-right mb-3"/>
                                    <button string="🗑️ Remove Empty Slots"
                                            type="object"
                                            name="action_remove_empty_slots"
                                            class="btn btn-outline-secondary btn-sm float-right mb-3 mr-2"/>
                                </div>
                            </div>

                            <field name="image_line_ids" nolabel="1">
                                <tree editable="bottom" create="true" delete="true">
                                    <field name="sequence" width="50px"/>
                                    <field name="image" widget="image" width="150px"/>
                                    <field name="description" placeholder="Brief description"/>
                                    <field name="notes" placeholder="Detailed notes"/>
                                    <field name="display_name" readonly="1"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="sequence"/>
                                            <field name="description" placeholder="e.g., Overall view, Screen close-up"/>
                                        </group>
                                        <group>
                                            <field name="image" widget="image"/>
                                        </group>
                                    </group>
                                    <group string="Notes">
                                        <field name="notes" placeholder="Detailed notes about this photo..."/>
                                    </group>
                                </form>
                            </field>
                        </page>

                        <page string="📝 General Notes" name="general_notes">
                            <group>
                                <field name="general_notes" nolabel="1"
                                       placeholder="Any general observations about equipment condition..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Before Photos Wizard Action -->
    <record id="custody_before_wizard_action" model="ir.actions.act_window">
        <field name="name">📸 Take Before Photos</field>
        <field name="res_model">custody.before.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="custody_before_wizard_view_form"/>
    </record>
</odoo>
