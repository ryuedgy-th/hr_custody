<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Default Property Categories for International Schools -->
        
        <!-- Root Categories -->
        <record id="category_electronics" model="property.category">
            <field name="name">Electronics</field>
            <field name="description">Electronic devices and equipment</field>
            <field name="sequence">10</field>
            <field name="color">5</field>
        </record>

        <record id="category_furniture" model="property.category">
            <field name="name">Furniture</field>
            <field name="description">Furniture and fixtures</field>
            <field name="sequence">20</field>
            <field name="color">3</field>
        </record>

        <record id="category_educational" model="property.category">
            <field name="name">Educational Materials</field>
            <field name="description">Teaching and learning materials</field>
            <field name="sequence">30</field>
            <field name="color">2</field>
        </record>

        <record id="category_vehicles" model="property.category">
            <field name="name">Vehicles</field>
            <field name="description">School vehicles and transportation</field>
            <field name="sequence">40</field>
            <field name="color">1</field>
        </record>

        <!-- Electronics Subcategories -->
        <record id="category_computers" model="property.category">
            <field name="name">Computers</field>
            <field name="description">Desktop and laptop computers</field>
            <field name="parent_id" ref="category_electronics"/>
            <field name="sequence">10</field>
        </record>

        <record id="category_audio_visual" model="property.category">
            <field name="name">Audio/Visual</field>
            <field name="description">Audio and visual equipment</field>
            <field name="parent_id" ref="category_electronics"/>
            <field name="sequence">20</field>
        </record>

        <record id="category_accessories" model="property.category">
            <field name="name">Accessories</field>
            <field name="description">Electronic accessories</field>
            <field name="parent_id" ref="category_electronics"/>
            <field name="sequence">30</field>
        </record>

        <!-- Computer Subcategories -->
        <record id="category_laptops" model="property.category">
            <field name="name">Laptops</field>
            <field name="description">Portable computers including MacBooks and Windows laptops</field>
            <field name="parent_id" ref="category_computers"/>
            <field name="sequence">10</field>
        </record>

        <record id="category_desktops" model="property.category">
            <field name="name">Desktops</field>
            <field name="description">Desktop computers and workstations</field>
            <field name="parent_id" ref="category_computers"/>
            <field name="sequence">20</field>
        </record>

        <record id="category_tablets" model="property.category">
            <field name="name">Tablets</field>
            <field name="description">Tablet devices including iPads and Android tablets</field>
            <field name="parent_id" ref="category_computers"/>
            <field name="sequence">30</field>
        </record>

        <!-- Audio/Visual Subcategories -->
        <record id="category_projectors" model="property.category">
            <field name="name">Projectors</field>
            <field name="description">Display projectors for classrooms and presentations</field>
            <field name="parent_id" ref="category_audio_visual"/>
            <field name="sequence">10</field>
        </record>

        <record id="category_speakers" model="property.category">
            <field name="name">Speakers</field>
            <field name="description">Audio speakers and sound systems</field>
            <field name="parent_id" ref="category_audio_visual"/>
            <field name="sequence">20</field>
        </record>

        <record id="category_cameras" model="property.category">
            <field name="name">Cameras</field>
            <field name="description">Digital cameras and recording equipment</field>
            <field name="parent_id" ref="category_audio_visual"/>
            <field name="sequence">30</field>
        </record>

        <record id="category_microphones" model="property.category">
            <field name="name">Microphones</field>
            <field name="description">Microphones and audio input devices</field>
            <field name="parent_id" ref="category_audio_visual"/>
            <field name="sequence">40</field>
        </record>

        <!-- Accessories Subcategories -->
        <record id="category_cables" model="property.category">
            <field name="name">Cables</field>
            <field name="description">Various cables and adapters</field>
            <field name="parent_id" ref="category_accessories"/>
            <field name="sequence">10</field>
        </record>

        <record id="category_chargers" model="property.category">
            <field name="name">Chargers</field>
            <field name="description">Device chargers and power supplies</field>
            <field name="parent_id" ref="category_accessories"/>
            <field name="sequence">20</field>
        </record>

        <record id="category_storage" model="property.category">
            <field name="name">Storage</field>
            <field name="description">External drives and storage devices</field>
            <field name="parent_id" ref="category_accessories"/>
            <field name="sequence">30</field>
        </record>

        <!-- Furniture Subcategories -->
        <record id="category_office_furniture" model="property.category">
            <field name="name">Office Furniture</field>
            <field name="description">Desks, chairs, and office equipment</field>
            <field name="parent_id" ref="category_furniture"/>
            <field name="sequence">10</field>
        </record>

        <record id="category_classroom_furniture" model="property.category">
            <field name="name">Classroom Furniture</field>
            <field name="description">Student desks, whiteboards, etc.</field>
            <field name="parent_id" ref="category_furniture"/>
            <field name="sequence">20</field>
        </record>

        <record id="category_storage_furniture" model="property.category">
            <field name="name">Storage Furniture</field>
            <field name="description">Cabinets, shelves, and storage units</field>
            <field name="parent_id" ref="category_furniture"/>
            <field name="sequence">30</field>
        </record>

        <!-- Educational Materials Subcategories -->
        <record id="category_books" model="property.category">
            <field name="name">Books</field>
            <field name="description">Textbooks and reference materials</field>
            <field name="parent_id" ref="category_educational"/>
            <field name="sequence">10</field>
        </record>

        <record id="category_lab_equipment" model="property.category">
            <field name="name">Laboratory Equipment</field>
            <field name="description">Science lab equipment and supplies</field>
            <field name="parent_id" ref="category_educational"/>
            <field name="sequence">20</field>
        </record>

        <record id="category_sports_equipment" model="property.category">
            <field name="name">Sports Equipment</field>
            <field name="description">Physical education and sports equipment</field>
            <field name="parent_id" ref="category_educational"/>
            <field name="sequence">30</field>
        </record>

        <record id="category_art_supplies" model="property.category">
            <field name="name">Art Supplies</field>
            <field name="description">Art and craft materials</field>
            <field name="parent_id" ref="category_educational"/>
            <field name="sequence">40</field>
        </record>

        <!-- Vehicles Subcategories -->
        <record id="category_school_buses" model="property.category">
            <field name="name">School Buses</field>
            <field name="description">School transportation buses</field>
            <field name="parent_id" ref="category_vehicles"/>
            <field name="sequence">10</field>
        </record>

        <record id="category_staff_vehicles" model="property.category">
            <field name="name">Staff Vehicles</field>
            <field name="description">Vehicles for staff use</field>
            <field name="parent_id" ref="category_vehicles"/>
            <field name="sequence">20</field>
        </record>

    </data>
</odoo>
