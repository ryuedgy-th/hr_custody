<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Custody Property form view - Updated for Odoo 18 -->
    <record model='ir.ui.view' id='custody_property_view_form'>
        <field name="name">custody.property.form</field>
        <field name="model">custody.property</field>
        <field name="arch" type="xml">
            <form string="Properties">
                <header>
                    <button name="action_view_custodies"
                            string="View Custodies"
                            type="object"
                            class="oe_highlight"
                            invisible="custody_count == 0"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="action_view_custodies"
                                type="object" icon="fa-list-ol">
                            <field string="Custodies" name="custody_count"
                                   widget="statinfo"/>
                        </button>
                    </div>

                    <field name="image" widget='image' class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Property Name"/>
                        </h1>
                        <div class="o_row">
                            <field name="is_available" invisible="1"/>
                            <span class="badge badge-success"
                                  invisible="not is_available">Available</span>
                            <span class="badge badge-warning"
                                  invisible="is_available">In Use</span>
                        </div>
                    </div>

                    <group>
                        <group>
                            <field name="property_selection" widget="radio"/>
                            <field name="product_id"
                                   invisible="property_selection != 'product'"
                                   options="{'no_create_edit': True}"/>
                            <field name="company_id"
                                   options="{'no_create': True}"/>
                        </group>
                        <group>
                            <!-- Additional fields can be added here -->
                        </group>
                    </group>

                    <notebook>
                        <page name="desc" string="Description">
                            <field name="desc" placeholder="Enter detailed description of the property..."/>
                        </page>
                        <page name="custodies" string="Custody History"
                              invisible="custody_count == 0">
                            <field name="custody_count" invisible="1"/>
                            <!-- This will be populated via action_view_custodies method -->
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Custody Property list view - Updated for Odoo 18 -->
    <record id="custody_property_view_tree" model="ir.ui.view">
        <field name="name">custody.property.view.list</field>
        <field name="model">custody.property</field>
        <field name="arch" type="xml">
            <list string="Properties" multi_edit="1">
                <field name="name"/>
                <field name="property_selection"/>
                <field name="product_id" optional="hide"/>
                <field name="custody_count" string="Active Custodies"/>
                <field name="is_available" string="Available"
                       decoration-success="is_available == True"
                       decoration-warning="is_available == False"
                       widget="boolean_toggle"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Custody Property search view - New for Odoo 18 -->
    <record id="custody_property_view_search" model="ir.ui.view">
        <field name="name">custody.property.search</field>
        <field name="model">custody.property</field>
        <field name="arch" type="xml">
            <search string="Properties">
                <field name="name"/>
                <field name="product_id"/>
                <field name="company_id"/>

                <!-- Filters -->
                <filter string="Available" name="available"
                        domain="[('is_available', '=', True)]"/>
                <filter string="In Use" name="in_use"
                        domain="[('is_available', '=', False)]"/>
                <filter string="Products" name="products"
                        domain="[('property_selection', '=', 'product')]"/>
                <filter string="No Connection" name="no_connection"
                        domain="[('property_selection', '=', 'empty')]"/>

                <separator/>

                <!-- Group By -->
                <group expand="0" string="Group By">
                    <filter string="Property Type" name="group_property_type"
                            context="{'group_by':'property_selection'}"/>
                    <filter string="Availability" name="group_availability"
                            context="{'group_by':'is_available'}"/>
                    <filter string="Company" name="group_company"
                            context="{'group_by':'company_id'}"
                            groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Custody Property kanban view - New for Odoo 18 -->
    <record id="custody_property_view_kanban" model="ir.ui.view">
        <field name="name">custody.property.kanban</field>
        <field name="model">custody.property</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="image"/>
                <field name="custody_count"/>
                <field name="is_available"/>
                <field name="property_selection"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('custody.property', 'image', record.id.raw_value)"
                                     alt="Property Image" class="o_kanban_image_inner"/>
                            </div>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <span t-if="record.is_available.raw_value"
                                              class="badge badge-success">Available</span>
                                        <span t-else=""
                                              class="badge badge-warning">In Use</span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div t-if="record.custody_count.raw_value > 0"
                                         class="o_kanban_record_subtitle">
                                        <i class="fa fa-users"/> <field name="custody_count"/> Active Custodies
                                    </div>
                                    <div class="o_kanban_record_subtitle">
                                        <i class="fa fa-tag"/> <field name="property_selection"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Custody Property action - Updated for Odoo 18 -->
    <record id="custody_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">custody.property</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="custody_property_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first property!
            </p>
            <p>
                Define company assets and equipment that can be assigned to employees.
            </p>
        </field>
        <field name="context">{
            'search_default_available': 1
        }</field>
    </record>
</odoo>
