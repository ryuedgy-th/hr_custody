<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Custody Property form view -->
    <record model='ir.ui.view' id='custody_property_view_form'>
        <field name="name">custody.property.form</field>
        <field name="model">custody.property</field>
        <field name="arch" type="xml">
            <form string="Properties">
                <header>
                    <button string="Set to Maintenance" type="object"
                            name="action_set_maintenance"
                            invisible="property_status == 'maintenance' or active_custody_count > 0"
                            groups="hr.group_hr_user"/>
                    <button string="Set to Available" type="object"
                            name="action_set_available"
                            invisible="property_status == 'available'"
                            groups="hr.group_hr_user"/>
                    <field name="property_status" widget="statusbar"
                           statusbar_visible="available,in_use,maintenance"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object"
                                name="action_view_custodies" icon="fa-list">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="custody_count"/>
                                </span>
                                <span class="o_stat_text">Total Custodies</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" type="object"
                                name="action_view_current_custody" icon="fa-user"
                                invisible="active_custody_count == 0">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="active_custody_count"/>
                                </span>
                                <span class="o_stat_text">In Use</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" type="object"
                                name="action_view_category" icon="fa-folder"
                                invisible="not category_id">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">View Category</span>
                            </div>
                        </button>
                    </div>

                    <field name="image" widget='image' class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Property Name"/>
                        </h1>
                        <h3>
                            <field name="property_code" placeholder="Property Code (Optional)"/>
                        </h3>
                        <div class="o_row">
                            <field name="category_id" options="{'no_create_edit': True}" 
                                   placeholder="Select a category..."/>
                        </div>
                    </div>

                    <!-- Current Status Information -->
                    <div class="alert alert-info" invisible="active_custody_count == 0">
                        <strong>Currently in use by:</strong>
                        <field name="current_borrower_id" readonly="1"/>
                    </div>

                    <group>
                        <group string="Basic Information">
                            <field name="property_selection" widget="radio"/>
                            <field name="product_id"
                                   invisible="property_selection != 'product'"/>
                            <field name="company_id"
                                   options="{'no_create': True}"/>
                            <field name="is_available" readonly="1"/>
                        </group>
                        <group string="Location &amp; Responsibility">
                            <field name="storage_location" placeholder="e.g., IT Room Cabinet A1"/>
                            <field name="department_id"/>
                            <field name="responsible_person"/>
                        </group>
                    </group>

                    <!-- ⭐ NEW: Approvers Section with inheritance info -->
                    <group string="Approval Settings">
                        <field name="approver_ids" widget="many2many_tags"
                               placeholder="Select users who can approve custody requests for this property"
                               options="{'no_create': True, 'no_create_edit': True}"/>
                        <field name="effective_approver_ids" widget="many2many_tags" readonly="1"/>
                        <div class="text-muted" invisible="not category_id or approver_ids">
                            <i class="fa fa-info-circle"/> 
                            Property-specific approvers override category defaults.
                        </div>
                        <div class="text-muted" invisible="not category_id or not approver_ids">
                            <i class="fa fa-info-circle"/> 
                            No property-specific approvers set. Inheriting from category: 
                            <field name="category_id" readonly="1" class="oe_inline"/>
                        </div>
                    </group>

                    <notebook>
                        <page name="desc" string="Description">
                            <field name="desc"/>
                        </page>

                        <page name="current_usage" string="Current Usage"
                              invisible="active_custody_count == 0">
                            <group>
                                <group string="Current Borrower">
                                    <field name="current_borrower_id" readonly="1"/>
                                    <field name="current_custody_id" readonly="1"/>
                                </group>
                                <group string="Actions">
                                    <button string="View Current Custody" type="object"
                                            name="action_view_current_custody"
                                            class="btn-primary"/>
                                </group>
                            </group>
                        </page>

                        <page name="storage_info" string="Storage &amp; Maintenance">
                            <group>
                                <group string="Storage Information">
                                    <field name="storage_location"/>
                                    <field name="department_id"/>
                                    <field name="responsible_person"/>
                                </group>
                                <group string="Maintenance">
                                    <field name="last_maintenance_date"/>
                                    <field name="next_maintenance_date"/>
                                </group>
                            </group>
                        </page>

                        <page name="purchase_info" string="Purchase Information">
                            <group>
                                <group string="Purchase Details">
                                    <field name="purchase_date"/>
                                    <field name="purchase_value"/>
                                </group>
                            </group>
                        </page>

                        <page name="custody_history" string="Custody History">
                            <field name="custody_count" invisible="1"/>
                            <button string="View All Custodies" type="object"
                                    name="action_view_custodies"
                                    class="btn-primary mb-3"
                                    invisible="custody_count == 0"/>
                            <p invisible="custody_count > 0">
                                No custody records found for this property.
                            </p>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Custody Property list view -->
    <record id="custody_property_view_tree" model="ir.ui.view">
        <field name="name">custody.property.view.list</field>
        <field name="model">custody.property</field>
        <field name="arch" type="xml">
            <list>
                <field name="category_id" optional="show"/>
                <field name="property_code"/>
                <field name="name"/>
                <field name="property_selection" optional="hide"/>
                <field name="storage_location"/>
                <field name="current_borrower_id"/>
                <!-- ⭐ NEW: Effective approvers instead of just approvers -->
                <field name="effective_approver_ids" widget="many2many_tags" optional="hide"/>
                <field name="property_status" widget="badge"
                       decoration-success="property_status == 'available'"
                       decoration-info="property_status == 'in_use'"
                       decoration-warning="property_status == 'maintenance'"
                       decoration-danger="property_status == 'damaged'"/>
                <field name="company_id" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Custody Property search view -->
    <record id="custody_property_view_search" model="ir.ui.view">
        <field name="name">custody.property.view.search</field>
        <field name="model">custody.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Property Name"/>
                <field name="property_code" string="Property Code"/>
                <field name="category_id" string="Category"/>
                <field name="storage_location"/>
                <field name="current_borrower_id"/>
                <field name="department_id"/>
                <!-- ⭐ NEW: Search by approvers and effective approvers -->
                <field name="approver_ids"/>
                <field name="effective_approver_ids"/>

                <!-- Filters -->
                <filter string="Available" name="available"
                        domain="[('property_status', '=', 'available')]"/>
                <filter string="In Use" name="in_use"
                        domain="[('property_status', '=', 'in_use')]"/>
                <filter string="Under Maintenance" name="maintenance"
                        domain="[('property_status', '=', 'maintenance')]"/>

                <separator/>

                <!-- Category Filters -->
                <filter string="With Category" name="with_category"
                        domain="[('category_id', '!=', False)]"/>
                <filter string="Without Category" name="without_category"
                        domain="[('category_id', '=', False)]"/>

                <separator/>

                <!-- Group By -->
                <group expand="0" string="Group By">
                    <filter string="Category" name="group_by_category"
                            context="{'group_by':'category_id'}"/>
                    <filter string="Status" name="group_status"
                            context="{'group_by':'property_status'}"/>
                    <filter string="Department" name="group_department"
                            context="{'group_by':'department_id'}"/>
                    <filter string="Storage Location" name="group_storage"
                            context="{'group_by':'storage_location'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Custody Property Kanban View -->
    <record id="custody_property_kanban_view" model="ir.ui.view">
        <field name="name">custody.property.kanban</field>
        <field name="model">custody.property</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="id"/>
                <field name="name"/>
                <field name="category_id"/>
                <field name="property_code"/>
                <field name="property_status"/>
                <field name="current_borrower_id"/>
                <field name="storage_location"/>
                <field name="image"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('custody.property', 'image', record.id.raw_value)" 
                                     alt="Property Image" class="o_image_64_cover"/>
                            </div>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <small class="text-muted" t-if="record.category_id.raw_value">
                                            <field name="category_id"/>
                                        </small>
                                    </div>
                                    <span class="float-right">
                                        <span t-attf-class="badge badge-pill badge-#{record.property_status.raw_value == 'available' ? 'success' : record.property_status.raw_value == 'in_use' ? 'info' : record.property_status.raw_value == 'maintenance' ? 'warning' : 'danger'}">
                                            <field name="property_status"/>
                                        </span>
                                    </span>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span t-if="record.property_code.raw_value" class="badge badge-secondary">
                                            <field name="property_code"/>
                                        </span>
                                        <span t-if="record.current_borrower_id.raw_value" class="text-muted">
                                            In use by: <field name="current_borrower_id"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Custody Property action -->
    <record id="custody_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">custody.property</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to Create a New Property.
            </p>
            <p>
                Properties represent equipment, furniture, or other assets that can be 
                assigned to employees for custody. You can organize properties using 
                categories and assign approvers who can approve custody requests.
            </p>
        </field>
    </record>
</odoo>
