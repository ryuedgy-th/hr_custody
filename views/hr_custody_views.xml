<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Hr Custody form view -->
    <record id="hr_custody_form_view" model="ir.ui.view">
        <field name="name">hr.custody.form</field>
        <field name="model">hr.custody</field>
        <field name="arch" type="xml">
            <form string="Custody">
                <header>
                    <button string="Send For Approval" type="object"
                            name="sent"
                            class="oe_highlight"
                            invisible="state != 'draft'"/>

                    <button string="Approve" groups="hr.group_hr_manager"
                            type="object" name="approve"
                            class="oe_highlight"
                            invisible="state != 'to_approve' or is_renew_return_date"/>

                    <button string="Renewal Approval"
                            groups="hr.group_hr_manager" type="object"
                            name="renew_approve"
                            class="oe_highlight"
                            invisible="state != 'to_approve' or not is_renew_return_date"/>

                    <button string="Refuse" groups="hr.group_hr_manager"
                            type="action"
                            name="%(wizard_reason_act)d"
                            invisible="state != 'to_approve' or is_renew_return_date"
                            context="{'reject_id':id,'model_id':'hr.custody'}"/>

                    <button string="Set to Draft" type="object"
                            name="set_to_draft"
                            invisible="state != 'rejected'"/>

                    <button string="Return" type="object"
                            name="set_to_return"
                            groups="hr.group_hr_manager"
                            invisible="state != 'approved'"/>

                    <button string="Send Mail" type="object"
                            name="send_mail" groups="hr.group_hr_manager"
                            invisible="is_mail_send or state != 'approved'"
                            class="oe_highlight"/>

                    <button string="Renew" type="action"
                            name="%(property_return_date_act)d"
                            context="{'custody_id':id}"
                            class="oe_highlight"
                            invisible="state != 'approved' or is_renew_return_date"/>

                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,to_approve,approved,returned"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="custody_property_id"
                                   options="{'no_open':True,'no_create':True}"
                                   readonly="state != 'draft'"/>
                            <field name="purpose" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="date_request" readonly="state != 'draft'"/>
                            <field name="return_date"
                                   invisible="is_renew_return_date and renew_date and not is_renew_reject"
                                   readonly="state != 'draft'"/>
                            <field name="renew_date"
                                   invisible="not is_renew_return_date or state != 'to_approve'"/>
                            <field name="company_id"
                                   options="{'no_create': True}"/>
                        </group>
                    </group>

                    <group invisible="state != 'rejected' and not is_renew_reject">
                        <field name="rejected_reason"
                               invisible="state != 'rejected'"/>
                        <field name="renew_rejected_reason"
                               invisible="not is_renew_reject or state != 'approved'"/>
                    </group>

                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>

                    <!-- Hidden fields for logic -->
                    <field name="is_read_only" invisible="1"/>
                    <field name="is_renew_return_date" invisible="1"/>
                    <field name="is_renew_reject" invisible="1"/>
                    <field name="is_mail_send" invisible="1"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Hr Custody tree view -->
    <record id="hr_custody_tree_view" model="ir.ui.view">
        <field name="name">hr.custody.tree</field>
        <field name="model">hr.custody</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="custody_property_id"/>
                <field name="purpose"/>
                <field name="date_request"/>
                <field name="return_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Hr Custody search view -->
    <record id="hr_custody_search_view" model="ir.ui.view">
        <field name="name">hr.custody.search</field>
        <field name="model">hr.custody</field>
        <field name="arch" type="xml">
            <search string="Custody">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="custody_property_id"/>
                <field name="purpose"/>
                <field name="date_request"/>
                <field name="return_date"/>
                <field name="state"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="status" domain="[]"
                            context="{'group_by':'state'}"/>
                    <filter string="Employee" name="employee" domain="[]"
                            context="{'group_by':'employee_id'}"/>
                    <filter string="Custody Name" name="custody"
                            domain="[]"
                            context="{'group_by':'custody_property_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ACTIONS -->

    <!-- Hr Custody action -->
    <record id="action_hr_custody" model="ir.actions.act_window">
        <field name="name">Custody</field>
        <field name="res_model">hr.custody</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
                                        (0, 0, {'view_mode': 'tree', 'view_id': ref('hr_custody_tree_view')}),
                                        (0, 0, {'view_mode': 'form', 'view_id': ref('hr_custody_form_view')})]"/>
        <field name="search_view_id" ref="hr_custody_search_view"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to Create a New Record.
            </p>
        </field>
    </record>

    <!-- Custody Property action -->
    <record id="action_hr_property" model="ir.actions.act_window">
        <field name="name">Property</field>
        <field name="res_model">custody.property</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to Create a New Record.
            </p>
        </field>
    </record>

    <!-- Report Custody action -->
    <record id="action_report_custody" model="ir.actions.act_window">
        <field name="name">Custody Analysis</field>
        <field name="res_model">report.custody</field>
        <field name="view_mode">pivot</field>
        <field name="context">{'group_by_no_leaf':1,'group_by':[]}</field>
        <field name="help">This report allows you to analyse all Custody Requests.</field>
    </record>

    <!-- MENUS -->

    <!-- Main menu -->
    <menuitem id="hr_custody_main_menu"
              name="Custody"
              sequence="20"
              web_icon="hr_custody,static/description/icon.png"/>

    <!-- Custody Request menu -->
    <menuitem id="hr_custody_menu"
              action="action_hr_custody"
              parent="hr_custody_main_menu"
              name="Custody Request"
              sequence="1"/>

    <!-- Property menu -->
    <menuitem id="hr_property_menu"
              action="action_hr_property"
              parent="hr_custody_main_menu"
              name="Property"
              sequence="5"
              groups="hr.group_hr_manager"/>

    <!-- Report menu group -->
    <menuitem id="custody_report_menu"
              name="Report"
              parent="hr_custody_main_menu"
              groups="hr.group_hr_manager"
              sequence="100"/>

    <!-- Custody Analysis menu -->
    <menuitem id="custody_report_menu_custody_analysis"
              name="Custody Analysis"
              action="action_report_custody"
              parent="custody_report_menu"
              groups="hr.group_hr_manager"
              sequence="1"/>
</odoo>
