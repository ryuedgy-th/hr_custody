<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Hr Custody form view with Photo Management System -->
    <record id="hr_custody_view_form" model="ir.ui.view">
        <field name="name">hr.custody.form</field>
        <field name="model">hr.custody</field>
        <field name="arch" type="xml">
            <form string="Custody">
                <header>
                    <button string="Send For Approval" type="object"
                            name="sent"
                            class="oe_highlight"
                            invisible="state != 'draft'"/>

                    <!-- ‚≠ê ‡∏õ‡∏∏‡πà‡∏°‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥ - ‡πÅ‡∏™‡∏î‡∏á‡πÄ‡∏â‡∏û‡∏≤‡∏∞‡∏Ñ‡∏ô‡∏ó‡∏µ‡πà‡∏≠‡∏¢‡∏π‡πà‡πÉ‡∏ô property approvers -->
                    <button string="Approve" type="object" name="approve"
                            class="oe_highlight"
                            invisible="state != 'to_approve'"
                            groups="base.group_user"/>

                    <!-- ‚≠ê ‡∏õ‡∏∏‡πà‡∏°‡∏õ‡∏è‡∏¥‡πÄ‡∏™‡∏ò -->
                    <button string="Refuse" type="object" name="refuse_with_reason"
                            invisible="state != 'to_approve'"
                            groups="base.group_user"/>

                    <button string="Set to Draft" type="object"
                            name="set_to_draft"
                            invisible="state != 'rejected'"/>
                    <button string="Return" type="object"
                            name="set_to_return"
                            groups="hr.group_hr_manager"
                            invisible="state != 'approved'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,to_approve,approved,returned"/>
                </header>
                <sheet>
                    <!-- ‚úÖ FIXED: Alert ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö Overdue - ‡πÄ‡∏û‡∏¥‡πà‡∏° role="alert" -->
                    <div class="alert alert-danger" role="alert" invisible="not is_overdue or state == 'returned'">
                        <strong>‚ö†Ô∏è OVERDUE:</strong> This item is <field name="days_overdue" nolabel="1"/> days overdue!
                    </div>

                    <!-- ‚úÖ FIXED: Alert ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö Pending Approval - ‡πÄ‡∏û‡∏¥‡πà‡∏° role="alert" -->
                    <div class="alert alert-info" role="alert" invisible="state != 'to_approve'">
                        <strong>üîî Waiting for approval from any of these users:</strong><br/>
                        <field name="property_approver_ids" widget="many2many_tags" readonly="1"/>
                    </div>

                    <!-- ‚úÖ FIXED: Alert ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö Current User ‡∏ó‡∏µ‡πà‡πÄ‡∏õ‡πá‡∏ô Approver - ‡πÄ‡∏û‡∏¥‡πà‡∏° role="alert" -->
                    <div class="alert alert-warning" role="alert" invisible="state != 'to_approve' or uid not in property_approver_ids">
                        <strong>‚ö° This request is waiting for YOUR approval!</strong>
                    </div>

                    <!-- ‚úÖ FIXED: Alert ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö Approved Status - ‡πÄ‡∏û‡∏¥‡πà‡∏° role="alert" -->
                    <div class="alert alert-success" role="alert" invisible="state not in ['approved', 'returned']">
                        <strong>‚úÖ Approved by:</strong>
                        <field name="approved_by_id" readonly="1" nolabel="1"/>
                        <strong>on</strong>
                        <field name="approved_date" readonly="1" nolabel="1"/>
                    </div>

                    <!-- ‚úÖ FIXED: Alert ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö Returned Status - ‡πÄ‡∏û‡∏¥‡πà‡∏° role="alert" -->
                    <div class="alert alert-success" role="alert" invisible="state != 'returned'">
                        <strong>üì¶ Returned:</strong>
                        Equipment returned on <field name="actual_return_date" readonly="1" nolabel="1"/>
                        by <field name="returned_by_id" readonly="1" nolabel="1"/>
                    </div>

                    <!-- üì∏ NEW: Photo Status Banner -->
                    <div class="alert alert-info" role="alert" invisible="state not in ['approved', 'returned']">
                        <div class="row">
                            <div class="col-md-4">
                                <strong>üì∏ Handover Photos:</strong>
                                <field name="handover_photo_count" nolabel="1"/> photos
                                <span class="badge badge-success" invisible="not has_handover_photos">‚úì</span>
                                <span class="badge badge-warning" invisible="has_handover_photos">‚ö†</span>
                            </div>
                            <div class="col-md-4" invisible="state != 'returned'">
                                <strong>üì¶ Return Photos:</strong>
                                <field name="return_photo_count" nolabel="1"/> photos
                                <span class="badge badge-success" invisible="not has_return_photos">‚úì</span>
                                <span class="badge badge-warning" invisible="has_return_photos">‚ö†</span>
                            </div>
                            <div class="col-md-4" invisible="state != 'returned'">
                                <strong>üìä Status:</strong>
                                <span class="badge badge-success" invisible="not photos_complete">Complete</span>
                                <span class="badge badge-warning" invisible="photos_complete">Incomplete</span>
                            </div>
                        </div>
                    </div>

                    <!-- Title and Smart Buttons -->
                    <div class="oe_button_box" name="button_box">
                        <!-- üì∏ Photo Action Buttons -->
                        <button name="action_view_handover_photos" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-camera"
                                invisible="state not in ['approved', 'returned']"
                                groups="hr.group_hr_user,hr.group_hr_manager">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="handover_photo_count" widget="integer"/>
                                </span>
                                <span class="o_stat_text">Handover Photos</span>
                            </div>
                        </button>

                        <button name="action_view_return_photos" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-archive"
                                invisible="state != 'returned'"
                                groups="hr.group_hr_user,hr.group_hr_manager">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="return_photo_count" widget="integer"/>
                                </span>
                                <span class="o_stat_text">Return Photos</span>
                            </div>
                        </button>

                        <button name="action_compare_photos" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-exchange"
                                invisible="state != 'returned' or not has_handover_photos or not has_return_photos"
                                groups="hr.group_hr_user,hr.group_hr_manager">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="total_photo_count" widget="integer"/>
                                </span>
                                <span class="o_stat_text">Compare Photos</span>
                            </div>
                        </button>
                    </div>

                    <h1>
                        <field name="name" readonly="1" nolabel="1"/>
                    </h1>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="custody_property_id"
                                   readonly="state != 'draft'"
                                   domain="[('property_status', '=', 'available')]"/>
                            <field name="purpose" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="date_request" readonly="state != 'draft'"/>
                            <field name="return_type" readonly="state != 'draft'" widget="radio"/>
                            <field name="return_date" readonly="state != 'draft'"
                                   invisible="return_type != 'date'"
                                   string="Expected Return Date"/>
                            <field name="expected_return_period" readonly="state != 'draft'"
                                   invisible="return_type == 'date'"/>
                            <field name="return_status_display" readonly="1"/>
                            <field name="rejected_reason"
                                   invisible="state != 'rejected'"/>

                            <!-- ‚≠ê Approval Information -->
                            <field name="approved_by_id"
                                   invisible="state not in ['approved', 'returned']"/>
                            <field name="approved_date"
                                   invisible="state not in ['approved', 'returned']"/>

                            <!-- ‚≠ê Return Information -->
                            <field name="actual_return_date"
                                   invisible="state != 'returned'"/>
                            <field name="returned_by_id"
                                   invisible="state != 'returned'"/>

                            <field name="company_id"
                                   options="{'no_create': True}"/>
                        </group>
                    </group>

                    <!-- ‚≠ê Hidden fields for permissions and computed values -->
                    <field name="property_approver_ids" invisible="1"/>
                    <field name="is_overdue" invisible="1"/>
                    <field name="days_overdue" invisible="1"/>
                    <field name="has_handover_photos" invisible="1"/>
                    <field name="has_return_photos" invisible="1"/>
                    <field name="photos_complete" invisible="1"/>

                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>

                        <!-- üì∏ NEW: Handover Photos Tab -->
                        <page string="üì∏ Handover Photos" 
                              invisible="state not in ['approved', 'returned']">
                            <group>
                                <div class="alert alert-info" role="alert">
                                    <strong>üì∏ Handover Photo Guidelines:</strong><br/>
                                    ‚Ä¢ Take overall photos showing the complete item<br/>
                                    ‚Ä¢ Capture detailed photos of important features<br/>
                                    ‚Ä¢ Include serial number or identification tags<br/>
                                    ‚Ä¢ Ensure good lighting and clarity<br/>
                                    ‚Ä¢ Maximum 5MB per photo
                                </div>
                            </group>
                            
                            <!-- üîß FIXED: Photo Upload Area - Replaced attrs with direct readonly -->
                            <field name="handover_photo_ids" 
                                   widget="many2many_binary"
                                   string="Upload Handover Photos"
                                   options="{
                                       'accepted_file_extensions': 'image/*',
                                       'max_upload_size': 5242880
                                   }"
                                   context="{
                                       'default_res_model': 'hr.custody',
                                       'default_res_id': id,
                                       'default_custody_photo_type': 'handover_overall'
                                   }"
                                   readonly="state == 'returned'"
                                   groups="hr.group_hr_user,hr.group_hr_manager"/>

                            <!-- Photo Gallery View -->
                            <field name="handover_photo_ids" 
                                   widget="image_gallery" 
                                   readonly="1"
                                   string="Handover Photo Gallery"
                                   invisible="not handover_photo_ids"/>
                        </page>

                        <!-- üì¶ NEW: Return Photos Tab -->
                        <page string="üì¶ Return Photos" 
                              invisible="state != 'returned'">
                            <group>
                                <div class="alert alert-info" role="alert">
                                    <strong>üì¶ Return Photo Guidelines:</strong><br/>
                                    ‚Ä¢ Document the condition when returned<br/>
                                    ‚Ä¢ Show any damage or wear<br/>
                                    ‚Ä¢ Compare with handover condition<br/>
                                    ‚Ä¢ Include any missing accessories<br/>
                                    ‚Ä¢ Take photos from same angles as handover
                                </div>
                            </group>
                            
                            <!-- Photo Upload Area -->
                            <field name="return_photo_ids" 
                                   widget="many2many_binary"
                                   string="Upload Return Photos"
                                   options="{
                                       'accepted_file_extensions': 'image/*',
                                       'max_upload_size': 5242880
                                   }"
                                   context="{
                                       'default_res_model': 'hr.custody',
                                       'default_res_id': id,
                                       'default_custody_photo_type': 'return_overall'
                                   }"
                                   groups="hr.group_hr_user,hr.group_hr_manager"/>

                            <!-- üîß FIXED: Photo Gallery View - Added thumbnail display -->
                            <field name="return_photo_ids" 
                                   widget="image_gallery" 
                                   readonly="1"
                                   string="Return Photo Gallery"
                                   invisible="not return_photo_ids"/>
                        </page>

                        <!-- üîç NEW: Photo Comparison Tab -->
                        <page string="üîç Photo Comparison" 
                              invisible="state != 'returned' or not has_handover_photos or not has_return_photos">
                            <div class="alert alert-success" role="alert">
                                <strong>üîç Photo Comparison:</strong> Compare handover vs return condition
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <h4>üì∏ Handover Photos</h4>
                                    <div class="o_field_widget">
                                        <field name="handover_photo_ids" 
                                               widget="image_gallery" 
                                               readonly="1"
                                               nolabel="1"/>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <h4>üì¶ Return Photos</h4>
                                    <div class="o_field_widget">
                                        <field name="return_photo_ids"
                                               widget="image_gallery" 
                                               readonly="1"
                                               nolabel="1"/>
                                    </div>
                                </div>
                            </div>

                            <!-- Photo Analysis Summary -->
                            <group string="üìä Photo Summary" invisible="not photos_complete">
                                <group>
                                    <field name="handover_photo_count" string="Handover Photos" readonly="1"/>
                                    <field name="return_photo_count" string="Return Photos" readonly="1"/>
                                </group>
                                <group>
                                    <field name="total_photo_count" string="Total Photos" readonly="1"/>
                                    <field name="photos_complete" string="Documentation Complete" readonly="1"/>
                                </group>
                            </group>
                        </page>

                        <!-- ‚≠ê Approval Information Tab -->
                        <page string="Approval Info" invisible="state == 'draft'">
                            <group>
                                <group string="Available Approvers">
                                    <field name="property_approver_ids" widget="many2many_tags" readonly="1"/>
                                </group>
                                <group string="Approval Details" invisible="state not in ['approved', 'returned']">
                                    <field name="approved_by_id" readonly="1"/>
                                    <field name="approved_date" readonly="1"/>
                                </group>
                            </group>
                            <group string="Return Details" invisible="state != 'returned'">
                                <group>
                                    <field name="actual_return_date" readonly="1"/>
                                    <field name="returned_by_id" readonly="1"/>
                                </group>
                                <group>
                                    <field name="return_notes" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- üì∏ NEW: Photo Comparison Popup View -->
    <record id="hr_custody_photo_comparison_view_form" model="ir.ui.view">
        <field name="name">hr.custody.photo.comparison.form</field>
        <field name="model">hr.custody</field>
        <field name="arch" type="xml">
            <form string="Photo Comparison" create="false" edit="false">
                <sheet>
                    <h2>üîç Photo Comparison: <field name="name" nolabel="1" readonly="1"/></h2>
                    <group>
                        <group>
                            <field name="employee_id" readonly="1"/>
                            <field name="custody_property_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="approved_date" readonly="1"/>
                            <field name="actual_return_date" readonly="1"/>
                        </group>
                    </group>
                    
                    <div class="row mt16">
                        <div class="col-md-6">
                            <h3>üì∏ Handover Condition</h3>
                            <field name="handover_photo_ids" 
                                   widget="image_gallery" 
                                   readonly="1" 
                                   nolabel="1"/>
                        </div>
                        <div class="col-md-6">
                            <h3>üì¶ Return Condition</h3>
                            <field name="return_photo_ids"
                                   widget="image_gallery" 
                                   readonly="1" 
                                   nolabel="1"/>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Hr Custody list view with photo indicators -->
    <record id="hr_custody_view_tree" model="ir.ui.view">
        <field name="name">hr.custody.list</field>
        <field name="model">hr.custody</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="custody_property_id"/>
                <field name="purpose"/>

                <!-- ‚≠ê Approvers &amp; Approved By Columns -->
                <field name="property_approver_ids" widget="many2many_tags" string="Approvers"/>
                <field name="approved_by_id" string="Approved By"/>

                <field name="date_request"/>
                <field name="return_type"/>
                <field name="return_date" string="Expected Return"/>
                <field name="actual_return_date" string="Actual Return"/>
                <field name="return_status_display"/>

                <!-- üì∏ NEW: Photo Status Columns -->
                <field name="handover_photo_count" string="üì∏ Handover"/>
                <field name="return_photo_count" string="üì¶ Return"/> 
                <field name="photos_complete" string="üìä Complete"/>

                <!-- ‚≠ê Hidden fields for decorations -->
                <field name="is_overdue" invisible="1"/>
                <field name="days_overdue" invisible="1"/>
                <field name="has_handover_photos" invisible="1"/>
                <field name="has_return_photos" invisible="1"/>

                <field name="state" widget="badge"
                       decoration-success="state == 'approved'"
                       decoration-info="state == 'to_approve'"
                       decoration-muted="state == 'returned'"
                       decoration-danger="state == 'rejected' or is_overdue"/>
            </list>
        </field>
    </record>

    <!-- ‚ú® ENHANCED: Smart Filters Search View with Photo Filters -->
    <record id="hr_custody_view_search" model="ir.ui.view">
        <field name="name">hr.custody.search</field>
        <field name="model">hr.custody</field>
        <field name="arch" type="xml">
            <search string="Custody Requests">
                <field name="name" string="Code"/>
                <field name="employee_id"/>
                <field name="custody_property_id"/>
                <field name="purpose"/>

                <!-- ‚≠ê Search by Approvers &amp; Approved By -->
                <field name="property_approver_ids"/>
                <field name="approved_by_id"/>

                <field name="state"/>
                <field name="return_type"/>

                <!-- üî• SMART FILTERS - ‡πÄ‡∏£‡∏µ‡∏¢‡∏á‡∏•‡∏≥‡∏î‡∏±‡∏ö‡∏ï‡∏≤‡∏° Priority -->
                <filter string="üîî Waiting My Approval" name="waiting_my_approval"
                        domain="[('property_approver_ids', 'in', [uid]), ('state', '=', 'to_approve')]"
                        help="Requests waiting for your approval"/>
                
                <filter string="üìã My Requests" name="my_requests"
                        domain="[('employee_id.user_id', '=', uid)]"
                        help="Requests created by me"/>
                
                <filter string="‚úÖ Approved by Me" name="approved_by_me"
                        domain="[('approved_by_id', '=', uid)]"
                        help="Requests I have approved"/>

                <separator/>

                <!-- üö® PRIORITY FILTERS -->
                <filter string="‚ö†Ô∏è Overdue Items" name="overdue"
                        domain="[('is_overdue', '=', True)]"
                        help="Items that are overdue for return"/>

                <filter string="üïê Due This Week" name="due_this_week"
                        domain="[('return_date', '&lt;=', (context_today() + datetime.timedelta(days=7)).strftime('%Y-%m-%d')), ('return_date', '&gt;=', context_today().strftime('%Y-%m-%d')), ('state', '=', 'approved')]"
                        help="Items due for return within 7 days"/>

                <separator/>

                <!-- üì∏ NEW: Photo Status Filters -->
                <filter string="üì∏ Has Handover Photos" name="has_handover_photos"
                        domain="[('has_handover_photos', '=', True)]"
                        help="Items with handover photos"/>

                <filter string="üì¶ Has Return Photos" name="has_return_photos"
                        domain="[('has_return_photos', '=', True)]"
                        help="Items with return photos"/>

                <filter string="üìä Complete Documentation" name="photos_complete"
                        domain="[('photos_complete', '=', True)]"
                        help="Items with complete photo documentation"/>

                <filter string="‚ö†Ô∏è Missing Photos" name="missing_photos"
                        domain="[('state', 'in', ['approved', 'returned']), ('photos_complete', '=', False)]"
                        help="Items missing photo documentation"/>

                <separator/>

                <!-- üìä STATUS FILTERS -->
                <filter string="üìù Draft" name="draft"
                        domain="[('state', '=', 'draft')]"/>
                <filter string="‚è≥ Waiting Approval" name="to_approve"
                        domain="[('state', '=', 'to_approve')]"/>
                <filter string="‚úÖ Approved" name="approved"
                        domain="[('state', '=', 'approved')]"/>
                <filter string="üì¶ Returned" name="returned"
                        domain="[('state', '=', 'returned')]"/>
                <filter string="‚ùå Rejected" name="rejected"
                        domain="[('state', '=', 'rejected')]"/>

                <separator/>

                <!-- üìÖ DATE FILTERS -->
                <filter string="üìÖ Returned This Week" name="returned_this_week"
                        domain="[('actual_return_date', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter string="üìÖ Returned This Month" name="returned_this_month"
                        domain="[('actual_return_date', '&gt;=', (context_today().replace(day=1)).strftime('%Y-%m-%d'))]"/>

                <separator/>

                <!-- üîÑ RETURN TYPE FILTERS -->
                <filter string="üìÖ Fixed Return Date" name="fixed_date"
                        domain="[('return_type', '=', 'date')]"/>
                <filter string="üîÑ Flexible Return" name="flexible"
                        domain="[('return_type', '=', 'flexible')]"/>
                <filter string="üéì Term End Return" name="term_end"
                        domain="[('return_type', '=', 'term_end')]"/>

                <separator/>

                <!-- üìä GROUP BY OPTIONS -->
                <group expand="0" string="Group By">
                    <filter string="üìä Status" name="group_status"
                            context="{'group_by':'state'}"/>
                    <filter string="üë§ Employee" name="group_employee"
                            context="{'group_by':'employee_id'}"/>
                    <filter string="‚úÖ Approved By" name="group_approved_by"
                            context="{'group_by':'approved_by_id'}"/>
                    <filter string="‚ö†Ô∏è Return Status" name="group_return_status"
                            context="{'group_by':'is_overdue'}"/>
                    <filter string="üì∏ Photo Status" name="group_photo_status"
                            context="{'group_by':'photos_complete'}"/>
                    <filter string="üìÖ Request Date" name="group_request_date"
                            context="{'group_by':'date_request'}"/>
                    <filter string="üîÑ Return Type" name="group_return_type"
                            context="{'group_by':'return_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ‚ú® ENHANCED: Main Custody Action with Smart Defaults -->
    <record id="hr_custody_action" model="ir.actions.act_window">
        <field name="name">Custody Requests</field>
        <field name="res_model">hr.custody</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="hr_custody_view_search"/>
        <field name="context">{
            'search_default_waiting_my_approval': 1,
        }</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to Create a New Custody Request.
            </p>
            <p>
                <strong>üî• Smart Filters Available:</strong><br/>
                ‚Ä¢ <strong>üîî Waiting My Approval</strong> - See requests needing your approval<br/>
                ‚Ä¢ <strong>üìã My Requests</strong> - View your own requests<br/>
                ‚Ä¢ <strong>‚ö†Ô∏è Overdue Items</strong> - Critical items past return date<br/>
                ‚Ä¢ <strong>üïê Due This Week</strong> - Items due soon<br/>
                ‚Ä¢ <strong>üì∏ Photo Status</strong> - Track photo documentation
            </p>
        </field>
    </record>

    <!-- üéØ SINGLE UNIFIED MENU with Smart Filters -->
    <menuitem action="hr_custody_action"
              id="hr_custody_menu_unified"
              parent="hr_custody_menu_management"
              name="üìã Custody Requests"
              sequence="1"/>

    <!-- Properties menu -->
    <menuitem action="custody_property_action"
              id="hr_property_menu"
              parent="hr_custody_menu_management"
              name="üè¢ Properties"
              sequence="5"
              groups="hr.group_hr_manager"/>
</odoo>