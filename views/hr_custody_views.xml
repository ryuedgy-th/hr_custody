<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Hr Custody form view -->
    <record id="hr_custody_view_form" model="ir.ui.view">
        <field name="name">hr.custody.form</field>
        <field name="model">hr.custody</field>
        <field name="arch" type="xml">
            <form string="Custody">
                <header>
                    <button string="Send For Approval" type="object"
                            name="sent"
                            class="oe_highlight"
                            invisible="state != 'draft'"/>

                    <!-- ‚≠ê ‡∏õ‡∏∏‡πà‡∏°‡∏≠‡∏ô‡∏∏‡∏°‡∏±‡∏ï‡∏¥ - ‡πÅ‡∏™‡∏î‡∏á‡πÄ‡∏â‡∏û‡∏≤‡∏∞‡∏Ñ‡∏ô‡∏ó‡∏µ‡πà‡∏≠‡∏¢‡∏π‡πà‡πÉ‡∏ô property approvers -->
                    <button string="Approve" type="object" name="approve"
                            class="oe_highlight"
                            invisible="state != 'to_approve'"
                            groups="base.group_user"/>

                    <!-- ‚≠ê ‡∏õ‡∏∏‡πà‡∏°‡∏õ‡∏è‡∏¥‡πÄ‡∏™‡∏ò -->
                    <button string="Refuse" type="object" name="refuse_with_reason"
                            invisible="state != 'to_approve'"
                            groups="base.group_user"/>

                    <button string="Set to Draft" type="object"
                            name="set_to_draft"
                            invisible="state != 'rejected'"/>
                    <button string="Return" type="object"
                            name="set_to_return"
                            groups="hr.group_hr_manager"
                            invisible="state != 'approved'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,to_approve,approved,returned"/>
                </header>
                <sheet>
                    <!-- ‚úÖ FIXED: Alert ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö Overdue - ‡πÄ‡∏û‡∏¥‡πà‡∏° role="alert" -->
                    <div class="alert alert-danger" role="alert" invisible="not is_overdue or state == 'returned'">
                        <strong>‚ö†Ô∏è OVERDUE:</strong> This item is <field name="days_overdue" nolabel="1"/> days overdue!
                    </div>

                    <!-- ‚úÖ FIXED: Alert ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö Pending Approval - ‡πÄ‡∏û‡∏¥‡πà‡∏° role="alert" -->
                    <div class="alert alert-info" role="alert" invisible="state != 'to_approve'">
                        <strong>üîî Waiting for approval from any of these users:</strong><br/>
                        <field name="property_approver_ids" widget="many2many_tags" readonly="1"/>
                    </div>

                    <!-- ‚úÖ FIXED: Alert ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö Current User ‡∏ó‡∏µ‡πà‡πÄ‡∏õ‡πá‡∏ô Approver - ‡πÄ‡∏û‡∏¥‡πà‡∏° role="alert" -->
                    <div class="alert alert-warning" role="alert" invisible="state != 'to_approve' or uid not in property_approver_ids">
                        <strong>‚ö° This request is waiting for YOUR approval!</strong>
                    </div>

                    <!-- ‚úÖ FIXED: Alert ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö Approved Status - ‡πÄ‡∏û‡∏¥‡πà‡∏° role="alert" -->
                    <div class="alert alert-success" role="alert" invisible="state not in ['approved', 'returned']">
                        <strong>‚úÖ Approved by:</strong>
                        <field name="approved_by_id" readonly="1" nolabel="1"/>
                        <strong>on</strong>
                        <field name="approved_date" readonly="1" nolabel="1"/>
                    </div>

                    <!-- ‚úÖ FIXED: Alert ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö Returned Status - ‡πÄ‡∏û‡∏¥‡πà‡∏° role="alert" -->
                    <div class="alert alert-success" role="alert" invisible="state != 'returned'">
                        <strong>üì¶ Returned:</strong>
                        Equipment returned on <field name="actual_return_date" readonly="1" nolabel="1"/>
                        by <field name="returned_by_id" readonly="1" nolabel="1"/>
                    </div>

                    <h1>
                        <field name="name" readonly="1" nolabel="1"/>
                    </h1>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="custody_property_id"
                                   readonly="state != 'draft'"
                                   domain="[('property_status', '=', 'available')]"/>
                            <field name="purpose" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="date_request" readonly="state != 'draft'"/>
                            <field name="return_type" readonly="state != 'draft'" widget="radio"/>
                            <field name="return_date" readonly="state != 'draft'"
                                   invisible="return_type != 'date'"
                                   string="Expected Return Date"/>
                            <field name="expected_return_period" readonly="state != 'draft'"
                                   invisible="return_type == 'date'"/>
                            <field name="return_status_display" readonly="1"/>
                            <field name="rejected_reason"
                                   invisible="state != 'rejected'"/>

                            <!-- ‚≠ê Approval Information -->
                            <field name="approved_by_id"
                                   invisible="state not in ['approved', 'returned']"/>
                            <field name="approved_date"
                                   invisible="state not in ['approved', 'returned']"/>

                            <!-- ‚≠ê Return Information -->
                            <field name="actual_return_date"
                                   invisible="state != 'returned'"/>
                            <field name="returned_by_id"
                                   invisible="state != 'returned'"/>

                            <field name="company_id"
                                   options="{'no_create': True}"/>
                        </group>
                    </group>

                    <!-- ‚≠ê Hidden fields for permissions and overdue status -->
                    <field name="property_approver_ids" invisible="1"/>
                    <field name="is_overdue" invisible="1"/>
                    <field name="days_overdue" invisible="1"/>

                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>

                        <!-- ‚≠ê NEW: Approval Information Tab -->
                        <page string="Approval Info" invisible="state == 'draft'">
                            <group>
                                <group string="Available Approvers">
                                    <field name="property_approver_ids" widget="many2many_tags" readonly="1"/>
                                </group>
                                <group string="Approval Details" invisible="state not in ['approved', 'returned']">
                                    <field name="approved_by_id" readonly="1"/>
                                    <field name="approved_date" readonly="1"/>
                                </group>
                            </group>
                            <group string="Return Details" invisible="state != 'returned'">
                                <group>
                                    <field name="actual_return_date" readonly="1"/>
                                    <field name="returned_by_id" readonly="1"/>
                                </group>
                                <group>
                                    <field name="return_notes" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Hr Custody list view -->
    <record id="hr_custody_view_tree" model="ir.ui.view">
        <field name="name">hr.custody.list</field>
        <field name="model">hr.custody</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="custody_property_id"/>
                <field name="purpose"/>

                <!-- ‚≠ê Approvers &amp; Approved By Columns -->
                <field name="property_approver_ids" widget="many2many_tags" string="Approvers"/>
                <field name="approved_by_id" string="Approved By"/>

                <field name="date_request"/>
                <field name="return_type"/>
                <field name="return_date" string="Expected Return"/>
                <field name="actual_return_date" string="Actual Return"/>
                <field name="return_status_display"/>

                <!-- ‚≠ê Overdue indicator -->
                <field name="is_overdue" invisible="1"/>
                <field name="days_overdue" invisible="1"/>

                <field name="state" widget="badge"
                       decoration-success="state == 'approved'"
                       decoration-info="state == 'to_approve'"
                       decoration-muted="state == 'returned'"
                       decoration-danger="state == 'rejected' or is_overdue"/>
            </list>
        </field>
    </record>

    <!-- ‚ú® ENHANCED: Smart Filters Search View -->
    <record id="hr_custody_view_search" model="ir.ui.view">
        <field name="name">hr.custody.search</field>
        <field name="model">hr.custody</field>
        <field name="arch" type="xml">
            <search string="Custody Requests">
                <field name="name" string="Code"/>
                <field name="employee_id"/>
                <field name="custody_property_id"/>
                <field name="purpose"/>

                <!-- ‚≠ê Search by Approvers &amp; Approved By -->
                <field name="property_approver_ids"/>
                <field name="approved_by_id"/>

                <field name="state"/>
                <field name="return_type"/>

                <!-- üî• SMART FILTERS - ‡πÄ‡∏£‡∏µ‡∏¢‡∏á‡∏•‡∏≥‡∏î‡∏±‡∏ö‡∏ï‡∏≤‡∏° Priority -->
                <filter string="üîî Waiting My Approval" name="waiting_my_approval"
                        domain="[('property_approver_ids', 'in', [uid]), ('state', '=', 'to_approve')]"
                        help="Requests waiting for your approval"/>
                
                <filter string="üìã My Requests" name="my_requests"
                        domain="[('employee_id.user_id', '=', uid)]"
                        help="Requests created by me"/>
                
                <filter string="‚úÖ Approved by Me" name="approved_by_me"
                        domain="[('approved_by_id', '=', uid)]"
                        help="Requests I have approved"/>

                <separator/>

                <!-- üö® PRIORITY FILTERS -->
                <filter string="‚ö†Ô∏è Overdue Items" name="overdue"
                        domain="[('is_overdue', '=', True)]"
                        help="Items that are overdue for return"/>

                <filter string="üïê Due This Week" name="due_this_week"
                        domain="[('return_date', '&lt;=', (context_today() + datetime.timedelta(days=7)).strftime('%Y-%m-%d')), ('return_date', '&gt;=', context_today().strftime('%Y-%m-%d')), ('state', '=', 'approved')]"
                        help="Items due for return within 7 days"/>

                <separator/>

                <!-- üìä STATUS FILTERS -->
                <filter string="üìù Draft" name="draft"
                        domain="[('state', '=', 'draft')]"/>
                <filter string="‚è≥ Waiting Approval" name="to_approve"
                        domain="[('state', '=', 'to_approve')]"/>
                <filter string="‚úÖ Approved" name="approved"
                        domain="[('state', '=', 'approved')]"/>
                <filter string="üì¶ Returned" name="returned"
                        domain="[('state', '=', 'returned')]"/>
                <filter string="‚ùå Rejected" name="rejected"
                        domain="[('state', '=', 'rejected')]"/>

                <separator/>

                <!-- üìÖ DATE FILTERS -->
                <filter string="üìÖ Returned This Week" name="returned_this_week"
                        domain="[('actual_return_date', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter string="üìÖ Returned This Month" name="returned_this_month"
                        domain="[('actual_return_date', '&gt;=', (context_today().replace(day=1)).strftime('%Y-%m-%d'))]"/>

                <separator/>

                <!-- üîÑ RETURN TYPE FILTERS -->
                <filter string="üìÖ Fixed Return Date" name="fixed_date"
                        domain="[('return_type', '=', 'date')]"/>
                <filter string="üîÑ Flexible Return" name="flexible"
                        domain="[('return_type', '=', 'flexible')]"/>
                <filter string="üéì Term End Return" name="term_end"
                        domain="[('return_type', '=', 'term_end')]"/>

                <separator/>

                <!-- üìä GROUP BY OPTIONS -->
                <group expand="0" string="Group By">
                    <filter string="üìä Status" name="group_status"
                            context="{'group_by':'state'}"/>
                    <filter string="üë§ Employee" name="group_employee"
                            context="{'group_by':'employee_id'}"/>
                    <filter string="‚úÖ Approved By" name="group_approved_by"
                            context="{'group_by':'approved_by_id'}"/>
                    <filter string="‚ö†Ô∏è Return Status" name="group_return_status"
                            context="{'group_by':'is_overdue'}"/>
                    <filter string="üìÖ Request Date" name="group_request_date"
                            context="{'group_by':'date_request'}"/>
                    <filter string="üîÑ Return Type" name="group_return_type"
                            context="{'group_by':'return_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ‚ú® ENHANCED: Main Custody Action with Smart Defaults -->
    <record id="hr_custody_action" model="ir.actions.act_window">
        <field name="name">Custody Requests</field>
        <field name="res_model">hr.custody</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="hr_custody_view_search"/>
        <field name="context">{
            'search_default_waiting_my_approval': 1,
        }</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to Create a New Custody Request.
            </p>
            <p>
                <strong>üî• Smart Filters Available:</strong><br/>
                ‚Ä¢ <strong>üîî Waiting My Approval</strong> - See requests needing your approval<br/>
                ‚Ä¢ <strong>üìã My Requests</strong> - View your own requests<br/>
                ‚Ä¢ <strong>‚ö†Ô∏è Overdue Items</strong> - Critical items past return date<br/>
                ‚Ä¢ <strong>üïê Due This Week</strong> - Items due soon
            </p>
        </field>
    </record>

    <!-- ‚ö†Ô∏è REMOVED: Duplicate Overdue Action (now integrated as filter) -->

    <!-- ===== UNIFIED MENU STRUCTURE ===== -->
    <!-- Note: Main menu structure is defined in hr_custody_menu_structure.xml -->

    <!-- üéØ SINGLE UNIFIED MENU with Smart Filters -->
    <menuitem action="hr_custody_action"
              id="hr_custody_menu_unified"
              parent="hr_custody_menu_management"
              name="üìã Custody Requests"
              sequence="1"/>

    <!-- Properties menu -->
    <menuitem action="custody_property_action"
              id="hr_property_menu"
              parent="hr_custody_menu_management"
              name="üè¢ Properties"
              sequence="5"
              groups="hr.group_hr_manager"/>
</odoo>
