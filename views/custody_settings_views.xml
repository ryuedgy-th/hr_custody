<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Custody Settings Form View -->
    <record id="custody_settings_view_form" model="ir.ui.view">
        <field name="name">custody.settings.form</field>
        <field name="model">custody.settings</field>
        <field name="arch" type="xml">
            <form string="Custody Settings" class="oe_form_configuration">
                <header>
                    <button string="Save" type="object" name="execute" class="oe_highlight" confirm="Save custody settings?"/>
                    <button string="Cancel" type="object" name="cancel" class="btn-secondary"/>
                </header>
                <sheet>
                    <div class="row mt16 o_settings_container" id="custody_settings">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="require_approval"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="require_approval"/>
                                <div class="text-muted">
                                    Require approval for all custody requests
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="auto_approve_same_department"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="auto_approve_same_department"/>
                                <div class="text-muted">
                                    Auto-approve requests from same department manager
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="notify_approvers"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="notify_approvers"/>
                                <div class="text-muted">
                                    Send email notifications to approvers
                                </div>
                            </div>
                        </div>

                        <div class="col-12 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="default_approver_group_ids"/>
                                <div class="text-muted">
                                    Comma-separated list of group IDs that can approve custody requests by default
                                </div>
                                <div class="content-group mt16">
                                    <field name="default_approver_group_ids" 
                                           placeholder="e.g. 1,2,3 (Group IDs)"/>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="default_approver_user_ids"/>
                                <div class="text-muted">
                                    Comma-separated list of user IDs that can approve custody requests globally
                                </div>
                                <div class="content-group mt16">
                                    <field name="default_approver_user_ids" 
                                           placeholder="e.g. 1,2,3 (User IDs)"/>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="reminder_frequency"/>
                                <div class="text-muted">
                                    How often to send return reminders
                                </div>
                                <div class="content-group mt16">
                                    <field name="reminder_frequency" class="o_light_label"/>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="maintenance_reminder_days"/>
                                <div class="text-muted">
                                    Days before maintenance due date to send reminders
                                </div>
                                <div class="content-group mt16">
                                    <field name="maintenance_reminder_days" class="o_light_label"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Settings Action -->
    <record id="custody_settings_action" model="ir.actions.act_window">
        <field name="name">Custody Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">custody.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module': 'hr_custody'}</field>
    </record>

    <!-- Settings Menu Item -->
    <menuitem id="custody_settings_menu"
              name="Settings"
              parent="hr_custody_main_menu"
              action="custody_settings_action"
              sequence="100"
              groups="hr_custody.group_custody_manager"/>

</odoo>