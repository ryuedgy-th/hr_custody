<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Custody Image Kanban View -->
    <record id="custody_image_view_kanban" model="ir.ui.view">
        <field name="name">custody.image.kanban</field>
        <field name="model">custody.image</field>
        <field name="arch" type="xml">
            <kanban string="Custody Images" class="o_kanban_mobile">
                <field name="id"/>
                <field name="image"/>
                <field name="image_type"/>
                <field name="description"/>
                <field name="taken_date"/>
                <field name="taken_by_id"/>
                <field name="custody_id"/>
                <field name="employee_id"/>
                <field name="property_id"/>

                <templates>
                    <!-- ‚úÖ FIXED: ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡∏à‡∏≤‡∏Å kanban-box ‡πÄ‡∏õ‡πá‡∏ô card -->
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <!-- Image Display -->
                                <div class="text-center mb-2">
                                    <field name="image" widget="image"
                                           class="oe_kanban_image"
                                           style="max-height: 150px; max-width: 200px;"/>
                                </div>

                                <!-- Image Type Badge -->
                                <div class="text-center mb-2">
                                    <span t-if="record.image_type.raw_value == 'before'"
                                          class="badge badge-info">üì∏ Before</span>
                                    <span t-if="record.image_type.raw_value == 'after'"
                                          class="badge badge-success">üì∏ After</span>
                                    <span t-if="record.image_type.raw_value == 'damage'"
                                          class="badge badge-danger">‚ö†Ô∏è Damage</span>
                                </div>

                                <!-- Description -->
                                <div class="text-center">
                                    <strong t-if="record.description.value">
                                        <field name="description"/>
                                    </strong>
                                    <div class="text-muted small">
                                        <field name="custody_id"/> - <field name="employee_id"/>
                                    </div>
                                    <div class="text-muted small">
                                        <!-- ‚úÖ FIXED: ‡πÄ‡∏û‡∏¥‡πà‡∏° title attribute ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö calendar icon -->
                                        <i class="fa fa-calendar" title="Date"></i> <field name="taken_date"/>
                                    </div>
                                    <div class="text-muted small">
                                        <!-- ‚úÖ FIXED: ‡πÄ‡∏û‡∏¥‡πà‡∏° title attribute ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö user icon -->
                                        <i class="fa fa-user" title="Taken by"></i> <field name="taken_by_id"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Custody Image List View -->
    <record id="custody_image_view_tree" model="ir.ui.view">
        <field name="name">custody.image.tree</field>
        <field name="model">custody.image</field>
        <field name="arch" type="xml">
            <list string="Custody Images">
                <field name="custody_id"/>
                <field name="image_type" widget="badge"
                       decoration-info="image_type == 'before'"
                       decoration-success="image_type == 'after'"
                       decoration-danger="image_type == 'damage'"/>
                <field name="image" widget="image" width="80px"/>
                <field name="description"/>
                <field name="employee_id"/>
                <field name="property_id"/>
                <field name="taken_date"/>
                <field name="taken_by_id"/>
                <field name="file_size_kb" string="Size (KB)"/>
            </list>
        </field>
    </record>

    <!-- Custody Image Form View -->
    <record id="custody_image_view_form" model="ir.ui.view">
        <field name="name">custody.image.form</field>
        <field name="model">custody.image</field>
        <field name="arch" type="xml">
            <form string="Custody Image">
                <header>
                    <button string="üîç View Full Size"
                            type="object"
                            name="action_view_full_image"
                            class="btn-primary"/>
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- File size info -->
                        <button class="oe_stat_button" name="file_size_info" type="object" icon="fa-file-image-o">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="file_size_kb"/>
                                </span>
                                <span class="o_stat_text">KB</span>
                            </div>
                        </button>
                    </div>

                    <!-- Main Image -->
                    <div class="text-center">
                        <field name="image" widget="image" style="max-height: 400px;"/>
                    </div>

                    <group>
                        <group string="Basic Information">
                            <field name="custody_id"/>
                            <field name="image_type" widget="badge"/>
                            <field name="sequence"/>
                        </group>
                        <group string="Context">
                            <field name="employee_id"/>
                            <field name="property_id"/>
                            <field name="location_notes"/>
                        </group>
                    </group>

                    <group string="Description &amp; Notes">
                        <field name="description" placeholder="Brief description of this photo"/>
                        <field name="notes" placeholder="Detailed notes about what this photo shows"/>
                    </group>

                    <group string="Audit Information">
                        <group>
                            <field name="taken_by_id" readonly="1"/>
                            <field name="taken_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="company_id" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Custody Image Search View -->
    <record id="custody_image_view_search" model="ir.ui.view">
        <field name="name">custody.image.search</field>
        <field name="model">custody.image</field>
        <field name="arch" type="xml">
            <search string="Search Images">
                <field name="custody_id"/>
                <field name="description"/>
                <field name="employee_id"/>
                <field name="property_id"/>
                <field name="taken_by_id"/>

                <!-- Filters -->
                <filter string="Before Photos" name="before_photos"
                        domain="[('image_type', '=', 'before')]"/>
                <filter string="After Photos" name="after_photos"
                        domain="[('image_type', '=', 'after')]"/>
                <filter string="Damage Documentation" name="damage_photos"
                        domain="[('image_type', '=', 'damage')]"/>

                <separator/>
                <filter string="Today" name="today"
                        domain="[('taken_date', '>=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="This Week" name="this_week"
                        domain="[('taken_date', '>=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter string="This Month" name="this_month"
                        domain="[('taken_date', '>=', (context_today().replace(day=1)).strftime('%Y-%m-%d'))]"/>

                <separator/>

                <!-- Group By -->
                <group expand="0" string="Group By">
                    <filter string="Image Type" name="group_type"
                            context="{'group_by': 'image_type'}"/>
                    <filter string="Custody" name="group_custody"
                            context="{'group_by': 'custody_id'}"/>
                    <filter string="Employee" name="group_employee"
                            context="{'group_by': 'employee_id'}"/>
                    <filter string="Property" name="group_property"
                            context="{'group_by': 'property_id'}"/>
                    <filter string="Taken Date" name="group_date"
                            context="{'group_by': 'taken_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Custody Image Action -->
    <record id="custody_image_action" model="ir.actions.act_window">
        <field name="name">üì∏ Custody Images</field>
        <field name="res_model">custody.image</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="custody_image_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_create">
                No images found.
            </p>
            <p>
                Images are automatically created when taking before/after photos during custody workflow.
            </p>
        </field>
    </record>

    <!-- ===== ENHANCED HR CUSTODY VIEWS ===== -->

    <!-- Update HR Custody Form View - Add Image Buttons -->
    <record id="hr_custody_form_view_images" model="ir.ui.view">
        <field name="name">hr.custody.form.images</field>
        <field name="model">hr.custody</field>
        <field name="inherit_id" ref="hr_custody.hr_custody_view_form"/>
        <field name="arch" type="xml">
            <!-- Add button_box if not exists, then add Image buttons -->
            <xpath expr="//sheet" position="inside">
                <div class="oe_button_box" name="button_box">
                    <!-- Before Images Button -->
                    <button class="oe_stat_button"
                            type="object"
                            name="action_view_all_images"
                            icon="fa-camera"
                            invisible="before_image_count == 0 and after_image_count == 0">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="before_image_count"/> / <field name="after_image_count"/>
                            </span>
                            <span class="o_stat_text">Before / After</span>
                        </div>
                    </button>

                    <!-- Image Comparison Button -->
                    <button class="oe_stat_button"
                            type="object"
                            name="action_view_image_comparison"
                            icon="fa-files-o"
                            invisible="before_image_count == 0 and after_image_count == 0">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">üì∏</span>
                            <span class="o_stat_text">Compare Images</span>
                        </div>
                    </button>
                </div>
            </xpath>

            <!-- Add Image Action Buttons to Header -->
            <xpath expr="//header" position="inside">
                <!-- Before Photos Button -->
                <button string="üì∏ Take Before Photos"
                        type="object"
                        name="action_take_before_photos"
                        class="btn-info"
                        invisible="not can_take_before_photos"/>

                <!-- After Photos Button -->
                <button string="üì∏ Take After Photos &amp; Return"
                        type="object"
                        name="action_take_after_photos"
                        class="btn-warning"
                        invisible="not can_take_after_photos"/>
            </xpath>

            <!-- Add Image Tab -->
            <xpath expr="//notebook" position="inside">
                <page string="üì∏ Photo Documentation" name="images"
                      invisible="before_image_count == 0 and after_image_count == 0">
                    <group>
                        <group string="Before Images" invisible="before_image_count == 0">
                            <field name="before_image_ids" nolabel="1" readonly="1">
                                <kanban>
                                    <field name="image"/>
                                    <field name="description"/>
                                    <field name="taken_date"/>
                                    <templates>
                                        <!-- ‚úÖ FIXED: ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡∏à‡∏≤‡∏Å kanban-box ‡πÄ‡∏õ‡πá‡∏ô card -->
                                        <t t-name="card">
                                            <div class="oe_kanban_card">
                                                <div class="text-center">
                                                    <field name="image" widget="image" style="max-height: 100px;"/>
                                                    <div><field name="description"/></div>
                                                    <div class="text-muted small"><field name="taken_date"/></div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </group>

                        <group string="After Images" invisible="after_image_count == 0">
                            <field name="after_image_ids" nolabel="1" readonly="1">
                                <kanban>
                                    <field name="image"/>
                                    <field name="description"/>
                                    <field name="taken_date"/>
                                    <templates>
                                        <!-- ‚úÖ FIXED: ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡∏à‡∏≤‡∏Å kanban-box ‡πÄ‡∏õ‡πá‡∏ô card -->
                                        <t t-name="card">
                                            <div class="oe_kanban_card">
                                                <div class="text-center">
                                                    <field name="image" widget="image" style="max-height: 100px;"/>
                                                    <div><field name="description"/></div>
                                                    <div class="text-muted small"><field name="taken_date"/></div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </group>
                    </group>
                </page>
            </xpath>

            <!-- Add hidden fields for permissions -->
            <xpath expr="//sheet" position="after">
                <field name="can_take_before_photos" invisible="1"/>
                <field name="can_take_after_photos" invisible="1"/>
                <field name="has_before_images" invisible="1"/>
                <field name="has_after_images" invisible="1"/>
                <field name="before_image_ids" invisible="1"/>
                <field name="after_image_ids" invisible="1"/>
                <field name="damage_image_ids" invisible="1"/>
            </xpath>
        </field>
    </record>

    <!-- ===== MENU ITEMS - REMOVED TO PREVENT CONFLICTS ===== -->
    <!-- Image History menu is now defined in hr_custody_views_actions.xml -->
    <!-- This prevents External ID conflicts and centralizes menu management -->

</odoo>