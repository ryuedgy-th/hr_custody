<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- BRAND NEW SUPER SIMPLE HR CUSTODY FORM VIEW -->
    
    <!-- Main Form View - NEW ID -->
    <record id="hr_custody_simple_form_view" model="ir.ui.view">
        <field name="name">hr.custody.simple.form</field>
        <field name="model">hr.custody</field>
        <field name="arch" type="xml">
            <form string="Custody Request">
                <header>
                    <button string="Send For Approval" type="object"
                            name="sent"
                            class="oe_highlight"
                            invisible="state != 'draft'"/>

                    <button string="Approve" type="object" name="approve"
                            class="oe_highlight"
                            invisible="state != 'to_approve'"
                            groups="base.group_user"/>

                    <button string="Refuse" type="object" name="refuse_with_reason"
                            invisible="state != 'to_approve'"
                            groups="base.group_user"/>

                    <button string="Set to Draft" type="object"
                            name="set_to_draft"
                            invisible="state != 'rejected'"/>
                            
                    <button string="Return" type="object"
                            name="set_to_return"
                            groups="hr.group_hr_manager"
                            invisible="state != 'approved'"/>
                            
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,to_approve,approved,returned"/>
                </header>
                
                <sheet>
                    <h1>
                        <field name="name" readonly="1" nolabel="1"/>
                    </h1>
                    
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="custody_property_id"/>
                            <field name="purpose"/>
                        </group>
                        <group>
                            <field name="date_request"/>
                            <field name="return_type" widget="radio"/>
                            <field name="return_date" invisible="return_type != 'date'"/>
                            <field name="expected_return_period" invisible="return_type == 'date'"/>
                            <field name="return_status_display"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                        
                        <!-- Simple Photos Tab -->
                        <page string="ðŸ“¸ Photos" invisible="state not in ['approved', 'returned']">
                            <group string="Upload Photos">
                                <field name="attachment_ids" 
                                       widget="many2many_binary"
                                       nolabel="1"
                                       options="{'accepted_file_extensions': 'image/*'}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- List View - NEW ID -->
    <record id="hr_custody_simple_tree_view" model="ir.ui.view">
        <field name="name">hr.custody.simple.tree</field>
        <field name="model">hr.custody</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="custody_property_id"/>
                <field name="purpose"/>
                <field name="date_request"/>
                <field name="return_date"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>
</odoo>